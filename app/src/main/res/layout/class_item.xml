<RelativeLayout
    android:layout_width="wrap_content"
  android:padding="20dp"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="20dp"


    android:layout_height="wrap_content">



        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
